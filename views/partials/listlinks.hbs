<table class="ui inverted violet table">
  <thead>
    <tr>
      <th>Bookmark</th>
      <th>link</th>
      <th>summary</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each bookmark.link}}
      <tr>
        <td>
          {{bookmark}}
        </td>
        <td>
          <a href="{{link}}" target="_blank">{{link}}</a>
        </td>
        <td>
          {{summary}}
        </td>
        <td>
          <a href="/bookmark/{{../bookmark.id}}/deletelink/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>